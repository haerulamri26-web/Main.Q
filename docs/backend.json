
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the HTML Reader application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity, matches Firebase Auth UID."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "UploadedGame": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UploadedGame",
      "type": "object",
      "description": "Represents an HTML game uploaded by a user.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User who uploaded the game."
        },
        "authorName": {
          "type": "string",
          "description": "The display name of the user who uploaded the game."
        },
        "title": {
          "type": "string",
          "description": "The title of the game."
        },
        "description": {
          "type": "string",
          "description": "A description of the game."
        },
        "htmlCode": {
          "type": "string",
          "description": "The HTML code for the game."
        },
        "uploadDate": {
          "type": "string",
          "description": "The date and time when the game was uploaded, as a server timestamp.",
          "format": "date-time"
        },
        "class": {
          "type": "string",
          "description": "The target grade level for the game."
        },
        "subject": {
          "type": "string",
          "description": "The subject matter the game is related to (e.g., Matematika, Fisika, Sejarah)."
        },
        "views": {
          "type": "number",
          "description": "Number of times the game has been viewed."
        }
      },
      "required": [
        "userId",
        "authorName",
        "title",
        "htmlCode",
        "uploadDate",
        "class",
        "subject",
        "views"
      ]
    },
    "UploadedLab": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UploadedLab",
      "type": "object",
      "description": "Represents an HTML lab simulation uploaded by a user.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Reference to the User who uploaded the lab."
        },
        "authorName": {
          "type": "string",
          "description": "The display name of the user who uploaded the lab."
        },
        "title": {
          "type": "string",
          "description": "The title of the lab simulation."
        },
        "description": {
          "type": "string",
          "description": "A description of the lab simulation."
        },
        "htmlCode": {
          "type": "string",
          "description": "The HTML code for the lab simulation."
        },
        "uploadDate": {
          "type": "string",
          "description": "The date and time when the lab was uploaded, as a server timestamp.",
          "format": "date-time"
        },
        "subject": {
          "type": "string",
          "description": "The subject matter the lab is related to (e.g., Kimia, Fisika, Biologi)."
        },
        "views": {
          "type": "number",
          "description": "Number of times the lab has been viewed."
        }
      },
      "required": [
        "userId",
        "authorName",
        "title",
        "htmlCode",
        "uploadDate",
        "subject",
        "views"
      ]
    },
    "Article": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Article",
      "type": "object",
      "description": "Represents an article or post in the teacher community.",
      "properties": {
        "userId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorPhotoURL": { "type": "string", "format": "uri" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "category": { "type": "string", "enum": ["Pendidikan", "Prompting", "Tutorial", "Tanya Jawab"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "views": { "type": "number" }
      },
      "required": ["userId", "authorName", "title", "content", "category", "createdAt", "views"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's public profile information.",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "bio": {
          "type": "string",
          "description": "A short biography of the user."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL to the user's profile picture."
        }
      },
      "required": [
        "displayName"
      ]
    },
    "Comment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Comment",
      "type": "object",
      "description": "Represents a comment on a content.",
      "properties": {
        "gameId": { "type": "string" },
        "labId": { "type": "string" },
        "articleId": { "type": "string" },
        "userId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorPhotoURL": { "type": "string", "format": "uri" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": [
        "userId",
        "authorName",
        "text",
        "createdAt"
      ]
    },
    "Notification": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Notification",
      "type": "object",
      "description": "Represents a notification for a user.",
      "properties": {
        "userId": { "type": "string", "description": "Recipient UID" },
        "senderName": { "type": "string" },
        "contentTitle": { "type": "string" },
        "contentLink": { "type": "string" },
        "type": { "type": "string", "enum": ["comment", "like", "system"] },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "senderName", "contentTitle", "contentLink", "type", "read", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/publishedGames/{gameId}": {
      "schema": {
        "$ref": "#/backend/entities/UploadedGame"
      },
      "description": "Stores published games."
    },
    "/publishedGames/{gameId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/backend/entities/Comment"
      },
      "description": "Comments for games."
    },
    "/publishedLabs/{labId}": {
      "schema": {
        "$ref": "#/backend/entities/UploadedLab"
      },
      "description": "Stores published lab simulations."
    },
    "/publishedLabs/{labId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/backend/entities/Comment"
      },
      "description": "Comments for labs."
    },
    "/articles/{articleId}": {
      "schema": {
        "$ref": "#/backend/entities/Article"
      },
      "description": "Stores community articles."
    },
    "/articles/{articleId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/backend/entities/Comment"
      },
      "description": "Comments for articles."
    },
    "/notifications/{notifId}": {
      "schema": {
        "$ref": "#/backend/entities/Notification"
      },
      "description": "User notifications."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Public user profiles."
    }
  }
}
